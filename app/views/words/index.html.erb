<div class="container">
  <div class="center jumbotron">
    <h1><%= t("word_list") %></h1>
    <h3><%= t("show_wl") %></h3>
    <h4><%= t("more_word") %></h4>
   </div>
  <table class="table">
    <thead>
      <tr>
        <th><%= t("wnumber") %></th>
        <th><%= t("word") %></th>
        <th><%= t("meaning") %></th>
        <th><%= t("language") %></th>
        </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.id %></td>
          <td><%= word.word %></td>
          <td><%= word.meaning %></td>
          <td><%= word.course.language %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
